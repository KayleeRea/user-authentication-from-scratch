
<% message = "You are not logged in" %>
<% unless id.nil? %>
  <% message = "Welcome, #{email}" %>
<% end %>



<h1><%= message %></h1>

<% if id.nil? %>
  <a href="/register">Register</a>
  <a href="/login">Login</a>
<% else %>
  <a href="/logout">Logout</a>
  <% if admin %>
  <a href="/users">View all users</a>
  <% end %>
<% end %>

