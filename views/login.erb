
<h1>Login</h1>

<% unless error.nil? %>
  <p class="error"><%= error %></p>
<%  end  %>
<form action="/login" method="post">
  <table>
    <tr>
      <td>Email</td>
      <td><input type="text" name="email"></td>
    </tr>
    <tr>
      <td>Password</td>
      <td><input type="password" name="password"></td>
    </tr>
    <tr>
      <td></td>
      <td><input type="submit" value="Login"></td>
    </tr>
  </table>
</form>